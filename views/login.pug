doctype html
html( lang="en" )  
    head
        include ./includes/auth-head

    body
        main.container(role='main')
            .card.card-container
             
                p.profile-name-card #{__("Sign In")}
                i.fas.fa-user-circle.profile-img-card   

                if(errors)
                    div.error-box
                        ul
                        each name, data in errors
                            li= name
                if(success)
                    div.success-box= success
                    
                form.nadmin-form(action="/login", method="post")
                    input(type="hidden", name="_csrf", value= csrfTokenGet())
                    input#email.form-control(type='email', name='email', placeholder=__("Email address"), required='', autofocus='')
                    input#password.form-control(type='password', name='password', placeholder=__('Password'), required='')
                    #remember.checkbox
                    label
                        input(name='remember', type='checkbox', value='remember-me')
                        |  #{__("Remember me")}
                    button.btn.btn-lg.btn-primary.btn-block.btn-signin(type='submit') #{__("Sign In")}
                // /form
                a.form-link(href='/forgotpassword')
                    |  #{__("Forgot the password?")}
                // /card-container

    // /.container

    include ./includes/auth-foot