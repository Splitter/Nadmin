doctype html
html( lang="en" )  
    head
        include ./includes/auth-head

    body
        main.container(role='main')
            .card.card-container
                p.profile-name-card #{__("Register")}
                i.fas.fa-user-cog.profile-img-card
                    
                if(errors)
                    div.error-box
                        ul
                        each name, data in errors
                            li= name

                if(success)
                    div.success-box= success
                form.nadmin-form(action="/register", method="post")
                    input(type="hidden", name="_csrf", value= csrfTokenGet())
                    input#displayname.form-control(type='text', name='displayname', placeholder=__('Your Name'), required='', autofocus='')
                    input#email.form-control(type='email', name='email', placeholder=__('Email Address'), required='', autofocus='')
                    input#confirmEmail.form-control(type='email', name='confirmEmail', placeholder=__('Confirm Email'), required='')
                    input#password.form-control(type='password', name='password', placeholder=__('Password'), required='')
                    input#confirmPassword.form-control(type='password', name='confirmPassword', placeholder=__('Confirm Password'), required='')
                    button.btn.btn-lg.btn-primary.btn-block.btn-signin(type='submit') #{__("Register")}
                // /form
                a.form-link(href='/login')
                    | #{__("Already a member? Login here")}
            // /card-container

        // /.container
    include ./includes/auth-foot